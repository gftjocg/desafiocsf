    {
      "name": "login",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login realizado com sucesso\", function () {\r",
                  "    pm.response.to.have.status(200);\r",
                  "});\r",
                  "\r",
                  "const response = pm.response.json();\r",
                  "// salvar token\r",
                  "pm.environment.set(\"jwt_token\", response.token || response.authorization);\r",
                  "\r",
                  "pm.test(\"Response body não está vazio\", function () {\r",
                  "    pm.expect(response).to.not.be.empty;\r",
                  "});\r",
                  "\r",
                  "// validação token\r",
                  "pm.test(\"Token JWT gerado\", function () {\r",
                  "    pm.expect(response.authorization).to.not.be.undefined;\r",
                  "});\r",
                  "\r",
                  ""
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            },
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const requiredVars = [\"base_url\", \"user_login\", \"pwd_login\"];\r",
                  "\r",
                  "requiredVars.forEach(variable => {\r",
                  "    if (!pm.variables.get(variable)) {\r",
                  "        throw new Error(`Variável obrigatória '${variable}' não está definida`);\r",
                  "    }\r",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{user_login}}\",\n  \"password\": \"{{pwd_login}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "login"
              ]
            }
          },
          "response": []
        }
