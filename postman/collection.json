      "name": "login",
      "item": [
        {
          "name": "login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login realizado com sucesso\", function () {\r",
                  "    pm.response.to.have.status(200);\r",
                  "});\r",
                  "\r",
                  "const response = pm.response.json();\r",
                  "// salvar token\r",
                  "pm.environment.set(\"jwt_token\", response.token || response.authorization);\r",
                  "\r",
                  "// validação token\r",
                  "pm.test(\"Token JWT gerado\", function () {\r",
                  "    pm.expect(response.authorization).to.not.be.undefined;\r",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{user_login}}\",\n  \"password\": \"{{pwd_login}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "login"
              ]
            }
          },
          "response": []
        }
